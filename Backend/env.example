# ============================================
# RentNest Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to git.

# Server
PORT=5000
NODE_ENV=development

# MongoDB Atlas (use MONGO_URI or MONGODB_URI; replace YOURPASSWORD)
MONGO_URI=mongodb+srv://rentnestuser:YOURPASSWORD@cluster0.hhhudm.mongodb.net/rentnest?retryWrites=true&w=majority
# MONGODB_URI=... (alternative; same format)

# JWT (required for auth; use a long random string in production, e.g. 64 chars)
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d

# Frontend URL (for CORS) - set in production to your Vercel URL
FRONTEND_URL=https://your-app.vercel.app

# Cloudinary (for property image uploads)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
# Optional: folder prefix (default: rentnest/properties)
# CLOUDINARY_FOLDER=rentnest/properties
# Optional: max file size in bytes (default: 3145728 = 3MB)
# CLOUDINARY_MAX_FILE_SIZE=3145728

# Email (optional - for password reset, etc.)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=
EMAIL_PASS=
EMAIL_FROM=noreply@rentnest.com
